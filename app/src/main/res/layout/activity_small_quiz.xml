<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmallQuizActivity">

    <TextView
        android:id="@+id/smallQuizContent"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="TextView"
        android:textColor="#020000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/smallQuizIndex"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/smallQuizIndex"
        android:layout_width="54dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupAns"
        android:layout_width="390dp"
        android:layout_height="180dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/smallQuizAns1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="RadioButton"
            android:textColor="#070000"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/smallQuizAns2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="RadioButton"
            android:textColor="#070100"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/smallQuizAns3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="RadioButton"
            android:textColor="#030000"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/smallQuizAns4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="RadioButton"
            android:textColor="#070000"
            android:textSize="16dp" />
    </RadioGroup>

    <Button
        android:id="@+id/smallQuizPrevious"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/previous_icon"
        android:enabled="false"
        android:textColor="#F1ECEC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/smallQuizFinish"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="280dp"
        android:background="#079C0F"
        android:text="Submit"
        android:textColor="#FDFEFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintStart_toEndOf="@+id/smallQuizPrevious"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/smallQuizNext"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/next_icon"
        android:textColor="#F4F6F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toEndOf="@+id/smallQuizFinish"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>