<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageAddLessonActivity">

    <EditText
        android:id="@+id/editLessonTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_style"
        android:ems="10"
        android:hint="Enter lesson's title"
        android:inputType="textPersonName"
        android:textColor="#050004"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editLessonContent"
        android:layout_width="370dp"
        android:layout_height="330dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/edittext_style"
        android:ems="10"
        android:hint="Enter lesson's content"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/asfasf"
        android:layout_width="52dp"
        android:layout_height="21dp"
        android:layout_marginTop="100dp"
        android:text="Skill"
        android:textColor="#030202"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="272dp"
        android:layout_height="54dp"
        android:layout_marginTop="80dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rdEditLessonReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Reading" />

        <RadioButton
            android:id="@+id/rdEditLessonGrammar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grammar" />
    </RadioGroup>

    <TextView
        android:id="@+id/asgasgasdg"
        android:layout_width="67dp"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        android:text="Difficulty"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/editLessonSubmit"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:layout_marginTop="535dp"
        android:background="@drawable/edittext_style"
        android:text="Edit Lesson"
        android:textAllCaps="false"
        android:textColor="#020101"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerEditLessonDifficulty"
        android:layout_width="121dp"
        android:layout_height="39dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>