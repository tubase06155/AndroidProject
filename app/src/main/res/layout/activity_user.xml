<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#353F5A"
    tools:context=".UserActivity">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="0dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FCFEFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="118dp"
        android:layout_height="34dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

    <Button
        android:id="@+id/userReading"
        android:layout_width="340dp"
        android:layout_height="77dp"
        android:layout_marginTop="148dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/bookicon2"
        android:gravity="fill"
        android:text="                       Reading"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/userGrammar"
        android:layout_width="340dp"
        android:layout_height="77dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/grammaricon2"
        android:gravity="fill"
        android:text="                      Grammar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userReading" />

    <Button
        android:id="@+id/userFeedback"
        android:layout_width="340dp"
        android:layout_height="77dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/feedback2"
        android:gravity="fill"
        android:text="                      Feedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userGrammar" />

    <Button
        android:id="@+id/userCheckRank"
        android:layout_width="340dp"
        android:layout_height="77dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/rankicon2"
        android:gravity="fill"
        android:text="                     Check Rank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userFeedback" />
</androidx.constraintlayout.widget.ConstraintLayout>